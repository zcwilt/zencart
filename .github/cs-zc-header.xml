<?xml version="1.0"?>
<ruleset name="Custom">
    <description>Custom Coding Standard</description>

    <!-- Include PHP files -->
    <file>^.+\.php$</file>

    <!-- Rules -->
    <rule ref="Generic.Commenting.DocComment">
        <properties>
            <property name="tags">
                <element>@copyright</element>
                <element>@version</element>
            </property>
        </properties>
    </rule>
</ruleset>
